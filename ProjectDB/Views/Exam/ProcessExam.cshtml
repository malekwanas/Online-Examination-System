@{ ViewData["Title"] = "ProcessExam"; }



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Exam Result</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body d-flex flex-column justify-content-center align-items-center ">
                @if (Model >= (ViewBag.totalMarks / 2))
                {
                    <h1 class="text-success text-center mb-4">CONGRATULATIONS!</h1>
                    <h3 class="text-muted text-center">Your grade is @Model / @ViewBag.totalMarks</h3>
                }
                else
                {
                    <h1 class="text-danger text-center mb-4">Sorry, but you failed :(</h1>
                    <h3 class="text-muted text-center">Your grade is @Model / @ViewBag.totalMarks</h3>
                }
            </div>
        </div>
    </div>
    <a class="nav-link text-light btn btn-dark" asp-controller="Student" asp-action="ViewCoursesStudent" asp-route-id="@ViewBag.StdId">Home</a>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
