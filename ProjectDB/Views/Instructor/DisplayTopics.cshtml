@{
    Layout = null;
    var instructorId = ViewBag.InstructorId;
}
@model List<Course_Topics>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>DisplayTopics</title>
    <style>
        .course-topics-heading {
            text-decoration: underline;
            font-size: 40px;
            color: #901b20;
            margin-bottom: 30px;
        }

        li {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .list-group {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
        }

        .btn {
            background-color: #901b20;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center course-topics-heading">Course Topics</h1>
                <ul class="list-group">
                    @foreach (var x in Model)
                    {
                        <li class="list-group-item">@x.Topics</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- Wrap the "Go Back" button in a new row and column to align it under the container -->
    <div class="container mt-3">
        <div class="row">
            <div class="col-12 text-center">
                <a asp-action="DisplayCoursesForInstructor" asp-controller="Instructor" asp-route-id="@instructorId" class="btn">Go Back</a>
            </div>
        </div>
    </div>
</body>
</html>
